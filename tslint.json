{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
//    Import sources within a group must be alphabetized.
    "ordered-imports": false,
//    Value must be set for boolean attributes
    "jsx-boolean-value": false,
//    The key 'id' is not sorted alphabetically
    "object-literal-sort-keys": false,
//    Lambdas are forbidden in JSX attributes due to their rendering performance impact
    "jsx-no-lambda": false,
//    JSX elements with no children must be self-closing
    "jsx-self-close": false
  }
}
